generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
}



model User {

  id  String @id @default(uuid())
  name String 
  password String 
  age Int 

  projects Project[] // 1 user -> N Projetos
}


model Project{

  id String @id @default(uuid())
  name String
  title String 
  description String 
  status String 
  updatedAt DateTime @default(now())
  userId String
  user User @relation(  fields: [userId] , references: [id])
  
}